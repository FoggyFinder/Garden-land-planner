<Window x:Class="WpfClientForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfClientForm"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="800" ResizeMode="NoResize">
    <Window.Resources>
        <Style TargetType="Label">
            <Setter Property="Width" Value="200" ></Setter>
            <Setter Property="Margin" Value="10" ></Setter>
            <Setter Property="HorizontalAlignment" Value="Left" ></Setter>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="200" ></Setter>
            <Setter Property="Height" Value="25" ></Setter>
            <Setter Property="Margin" Value="10" ></Setter>
            <Setter Property="HorizontalAlignment" Value="Left" ></Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="0">
            <Button Height="70"></Button>
            <Button Height="70"></Button>
            <Button Height="70"></Button>
            <Button Height="70"></Button>
        </StackPanel>
        <Button Height="70" Grid.Column="0"  VerticalAlignment="Bottom"></Button>

        <ScrollViewer HorizontalScrollBarVisibility="Auto" Margin="10,0" Grid.Column="1">
            <StackPanel Grid.Column="1">
                <DockPanel LastChildFill="True">
                    <Label Content="Координаты участка"></Label>
                    <TextBox />
                </DockPanel>

                <Label Content="Размеры (ширина в ряду)"></Label>
                <DockPanel LastChildFill="True">
                    <Label Content="Длина" Width="50"></Label>
                    <TextBox Width="60"/>
                    <Label Content="Ширина" Width="70"></Label>
                    <TextBox  Width="60"/>
                </DockPanel>


                <DockPanel LastChildFill="True">
                    <Label Content="0.1 Расстояние между рядами (м)"></Label>
                    <TextBox />
                </DockPanel>

                <DockPanel LastChildFill="True">
                    <Label Content="0.2 Расстояние между растениями (м)"></Label>
                    <TextBox />
                </DockPanel>

                <DockPanel LastChildFill="True">
                    <Label Content="0.2 Расстояние между растениями (м)"></Label>
                    <TextBox />
                </DockPanel>

                <DockPanel LastChildFill="True">
                    <Label Content="0.3 Направление рядов (в градусах)"></Label>
                    <TextBox />
                </DockPanel>

                <DockPanel LastChildFill="True">
                    <Label Content="2. Сетка от града "></Label>
                    <CheckBox VerticalAlignment="Center"/>
                </DockPanel>

                <DockPanel LastChildFill="True">
                    <Label Content="4. Расстояние между столбами (м)"></Label>
                    <TextBox />
                </DockPanel>

                <DockPanel LastChildFill="True">
                    <Label Content="5. Глубина установки (м)"></Label>
                    <TextBox />
                </DockPanel>
                
                <Rectangle  Width="650" Height="12" Fill="#FFEAE0E0"/>
                <Label Content="6.Столбы"></Label>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Window>
